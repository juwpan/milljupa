<div class="row">
<div class="col-md-8 col-md-offset-2">
  <div>
    <h1><%= @user.name %></h1>
    <%= link_to I18n.t('views.users.change_password'), edit_user_registration_path(@user) if @user == current_user %>
  </div>
  <table class="users-table table text-color">
    <thead>
      <tr>
        <th class="text-center">#</th>
        <th></th>
        <th class="text-center"><%= I18n.t("views.users.date") %></th>
        <th class="text-center"><%= I18n.t("views.users.question") %></th>
        <th class="text-center"><%= I18n.t("views.users.prize") %></th>
        <th class="text-center"><%= I18n.t("views.users.hints") %></th>
      </tr>
    </thead>

    <%# Выводим список игр пользователя с помощью нашего фрагмента users/_game %>
    <%= render partial: 'game', collection: @games %>
  </table>
</div>
</div>
