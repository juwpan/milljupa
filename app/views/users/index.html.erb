<h1><%= I18n.t("views.users.rating") %></h1>

<div class="row">
<div class="col-md-8 col-md-offset-2">
  <table class="users-table table">
    <thead>
      <tr>
        <th class="text-center"><%= I18n.t("views.users.place") %></th>
        <th class="text-center"><%= I18n.t("views.users.name") %></th>
        <th class="text-center"><%= I18n.t("views.users.prize") %></th>
        <th class="text-center"><%= I18n.t("views.users.games") %></th>
        <th class="text-center"><%= I18n.t("views.users.per_game") %></th>
      </tr>
    </thead>

    <%# Для каждого пользователя выводим информацию о его выигрыше, ссылку на профиль и так далее %>
    <% @users.each_with_index do |user, index| %>
      <tr class="text-center">
        <td><%= index + 1 %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= number_to_currency user.balance %></td>
        <td><%= user.games.count %></td>
        <td><%= user.average_prize %></td>
      </tr>
    <% end %>
  </table>
</div>
</div>
