<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      <%= I18n.t("errors.messages.not_saved", count: errors.count)%>
    </div>
    <ul>
      <% errors.messages.each do |message| %>
        <li><%= message.join(' ') %></li>
      <% end %>
    </ul>
  </div>
<% end %>
